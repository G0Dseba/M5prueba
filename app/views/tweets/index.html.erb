<h1>Tweets</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :description_cont, "Buscar tweets" %>
  <%= f.search_field :description_cont, placeholder: "Buscar tweets" %>
  <%= f.submit "Buscar", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Nuevo Tweet', new_tweet_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Nombre de Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.description %></td>
        <td><%= tweet.user_name %></td>
        <td><%= link_to 'Mostrar', tweet %></td>
        <td><%= link_to 'Editar', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Eliminar', tweet, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="my-5 d-flex justify-content-end">
  <%= pagy_nav(@pagy) %>
</div>