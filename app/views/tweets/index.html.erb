<h1>Tweets</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :description_cont, "Search tweets" %>
  <%= f.search_field :description_cont, placeholder: "Search tweets" %>
  <%= f.submit "Search", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.description %></td>
        <td><%= tweet.user_name %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagy_nav(@pagy) %>
