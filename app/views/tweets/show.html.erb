<div class="container mt-4">
  <p class="text-success"><%= notice %></p>

  <%= render @tweet %>

  <div class="mt-3 d-flex flex-wrap">
    <%= link_to "Editar este tweet", edit_tweet_path(@tweet), class: 'btn btn-dark me-2 mb-2' %>
    <%= link_to "Volver a los tweets", tweets_path, class: 'btn btn-secondary me-2 mb-2' %>
    <%= button_to "Eliminar este tweet", @tweet, method: :delete, class: 'btn btn-danger mb-2' %>
  </div>
</div>

